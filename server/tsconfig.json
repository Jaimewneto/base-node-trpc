{
    "compilerOptions": {
        "target": "ES2024",
        "module": "CommonJS",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        "paths": {
            "@/*": ["./*"]
        },
        "noEmit": true,
        "typeRoots": ["./node_modules/@types"]
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
